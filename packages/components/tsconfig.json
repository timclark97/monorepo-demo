{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["DOM"],
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strict": true
  },
  "include": ["**/*/*.ts", "**/*/*.tsx"],
  "exclude": ["dist", "node_modules"]
}
