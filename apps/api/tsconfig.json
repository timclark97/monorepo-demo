{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "target": "ESNext",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/index.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "./drizzle.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
