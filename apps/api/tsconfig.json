{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "outDir": "dist",
    "target": "ESNext",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/index.ts", "src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true, 
  }, 
}
